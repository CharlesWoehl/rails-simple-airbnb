<div class="container">
<div class="container mt-3">
  <div class="row">
    <div class="col-12">
      <h1>All your flats</h1>
    </div>
  </div>
  <div class="row">
    <div class="col-12">
      <p>Tous les <%= @flats_lenght %> appartements</p>
    </div>
  </div>

    <div class="row">

  <% @flats.each do |flat| %>

      <div class="col-md-4">
        <div class="flat-card">
          <div class="flat-card-image" style="background-image: url('<%= flat.picture %>')"></div>
          <div class="flat-card-content">
            <div class="flat-card-title">
              <h4><%= flat.name %></h4>
            </div>
            <p><%= flat.address %></p>
            <div class="flex">
              <div class="flex align-items-center">
                <i class="fa-solid fa-people-line"></i>
                <span><%= flat.number_of_guests %></span>
              </div>
              <div class="flex align-items-center ms-3">
                <i class="fa-solid fa-euro-sign"></i>
                <span><%= flat.price_per_night %></span>
              </div>
            </div>
          </div>
          <div class="flat-card-actions">
            <%= link_to '+ infos', flat_path(flat), class:"btn btn-outline-success" %>
              <%= link_to 'Edit', edit_flat_path(flat), class:"btn btn-outline-warning" %>
            <%= link_to 'Supprimer', flat_path(flat), class:"btn btn-outline-danger", data: {turbo_method: :delete, turbo_confirm: "Are you sure?"} %>
          </div>
        </div>
      </div>
  <% end %>
    </div>
</div>
</div>
